<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="android.eservices.pogchamps">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".PogApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_chess"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:networkSecurityConfig="@xml/network_security_config">
        <activity android:name=".results.MatchActivity"/>
        <activity android:name=".results.BaseActivity" />
        <activity android:name=".results.ParticipantActivity" />
        <activity
            android:name=".results.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>